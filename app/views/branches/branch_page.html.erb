<div style="font-family: Brandon Grotesque !important;">
    <div class="w-100"><h1><span style="margin-left: 35%;"></span></h1></div>
	<div class="parent-container">
		<div class="container">
		  <div class="row">
		    <div class="col">
		      <blockquote class="blockquote text-center"><p id="list-desc"><%= @branch.name %></p></blockquote>
		    </div>
		    <div class="col col-6">
			    <div class="row">
			        <div class="col">
			        </div>
			        <div class="col">
                      <%= button_tag "Create a Contact", class: "btn btn-success", id: "create_branch_contact_btn", onclick: "javascript: showNewBranchContactForm()", :type => "button"%>			      	
			        </div>
			        <div class="col">		      	
			        </div>
			    </div>
			</div>
			    
		    <div class="col">
		        <div class="row">
		       	    <div class="col">
		       	       <h5><blockquote id="list-desc">List of all Contacts for <%= @branch.name %></blockquote></h5>
		       	    </div>
              
		        </div>
		    </div>
		  </div>	
		</div>  
	</div>

	<div class="parent-container">
		<div class="container">
		  <div class="row">
		    <div class="col col-3">
				<div class="card" style="width: 20rem;">
				  <ul class="list-group list-group-flush">
	                <% @branches.each do |div| %>
	                   <li class="list-group-item"><h4>Branch name :  <span class="badge badge-secondary"><%=div.name %></span></h4></li>
	                <% end %>
	              </ul>  
				</div>
		    </div>
		    <div class="col col-5" style= "margin-left: 5%;">
		        <div class="row">
		            <div class="col">
			            <div id= "new-branch-contact-form" style="display: none;">
			               <%= render "contacts/new_contact_form" %>
			            </div>
			            <div id="created-contacts-div" style="display: none; margin-left: 15%;">
			            	
			            </div>

			        </div>   
		        </div>   
	        </div> 
		    <div class="col col-3">
		        <div class="row">
		            <div class="col">
			            <div id= "list-all-branches">
							<div class="card" style="width: 20rem;">
							  <ul class="list-group list-group-flush" id="branch-contacts-ul">

				              </ul>  
			              
							</div>			           	  
			            </div>
			        </div>   
		        </div> 
		    </div>
		  </div>	
		</div>  
	</div>	

</div>

