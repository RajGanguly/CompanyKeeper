<div><small class="form-text text-muted">Select a Branch:</small></div>
<select class="selectpicker" id="branches-select" onchange="branchChanged(this)" style="min-width: 0; width: 100%;" data-live-search="true">
  <% branches.each do |br| %>
     <option data-id='<%= br.id %>' value='<%= br.id %>'><%= br.name %></option>
  <% end %>
</select>
  <input type="hidden" name="selected_branch_id" id="selected_branch_id" value='<%= branches.first.id %>'/>