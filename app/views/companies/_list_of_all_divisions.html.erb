<div><small class="form-text text-muted">Select a Division:</small></div>
<select class="selectpicker" id="divisions-select" onchange="divisionChanged(this)" style="min-width: 0; width: 100%;"  data-live-search="true">
	<% divisions.each do |div| %>
	   <option data-id='<% div.id %>' value='<%= div.id %>'><%= div.name %></option>
	<% end %>
</select>
<input type="hidden" name="selected_division_id" id="selected_division_id" value='<%= divisions.first.id %>'/>